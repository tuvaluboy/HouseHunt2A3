@model IEnumerable<HouseHunt2.Models.Preference>

@{
    ViewBag.Title = "Index";
}
<br>
<h2 align="center">My Preferences</h2>

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bedroom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baths)
        </th>
        <th>
            Nearby Location
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bedroom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NearbyLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PreId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PreId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PreId })
            </td>
        </tr>
    }

</table>

<div>
    <button class="butt" type="button">@Html.ActionLink("Create New", "Create")</button>
    <br />
</div>

<br>

<div>
    <h3 align="center">Listings</h3>
</div>
